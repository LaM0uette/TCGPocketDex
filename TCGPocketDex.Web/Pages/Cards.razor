@page "/cards"
@using TCGPocketDex.Contracts.Request
@using TCGPocketDex.SDK.Services
@using TCGPocketDex.Domain.Models
@inject ICardService CardService
@inject NavigationManager Nav

<PageTitle>Cards</PageTitle>

<h1>All Cards</h1>

@if (_loading)
{
    <p>Loading cards...</p>
}
else if (_error is not null)
{
    <p class="text-danger">Error: @_error</p>
}
else
{
    <div style="height:80vh; overflow:auto; border:1px solid #ccc; padding:8px;">
        <div style="display:grid; grid-template-columns: repeat(auto-fill, minmax(180px, 1fr)); gap:12px;">
            @foreach (Card card in _cards)
            {
                <div style="border:1px solid #e0e0e0; border-radius:8px; padding:8px; background:#fff;">
                    <div style="text-align:center;">
                        <img src="@card.ImageUrl" alt="@card.Name" style="max-width:100%; height:auto;" />
                    </div>
                    <div style="margin-top:6px;">
                        <strong>@card.Name</strong><br />
                        <small>@card.Collection.Code - #@card.CollectionNumber</small>
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    
    [Parameter]
    [SupplyParameterFromQuery(Name = "lng")]
    public string? Culture { get; set; }
    
    private bool _loading = true;
    private string? _error;
    private List<Card> _cards = [];

    protected override async Task OnInitializedAsync()
    {
        try
        {
            //_cards = await CardService.GetAllAsync(Culture);

            DeckRequest request = new(
                [
                    new CardRequest("A1", 1),
                    new CardRequest("A1", 1),
                    new CardRequest("A2", 1),
                    new CardRequest("A2", 2),
                    new CardRequest("A1", 3),
                ]
            );

            List<Card> batch = await CardService.GetByBatchAsync(request);
            Console.WriteLine($"Fetched {batch.Count} cards in batch.");
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }
}